@model IEnumerable<ProductDetail>
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/MidLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>

    </title>
</head>
<body>
    <div class="container">
        <br>
        <br>
        @foreach (var item in Model)
        {
            <div class="section-title" style="margin-top:12%">
                <h2>@item.Baslik</h2>
                <p></p>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6 col-6 d-flex align-items-center justify-content-center">
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.Fotograf)" alt="" class="img-fluid" />
                </div>
                <div class="col-lg-4 col-md-6 col-6 d-flex align-items-center justify-content-center">
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.Fotograf1)" alt="" class="img-fluid" />
                </div>
                <div class="col-lg-4 col-md-6 col-6 d-flex align-items-center justify-content-center">
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.Fotograf2)" alt="" class="img-fluid" />
                </div>
            </div>
            <div>
                <ol style="font-size:20px">

                    @if (item.Icerik != null)
                    {
                        <li>
                            @item.Icerik
                        </li>
                    }

                    @if (item.Icerik != null)
                    {
                        <li>

                            @item.Icerik2
                        </li>

                    }
                    @if (item.Icerik != null)
                    {
                        <li>

                            @item.Icerik3
                        </li>

                    }
                </ol>
            </div>
        }
        <br>
        <br>
    </div>
</body>
</html>

